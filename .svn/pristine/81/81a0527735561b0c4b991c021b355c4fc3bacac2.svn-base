@charset "utf-8";
*{margin:0;padding:0;list-style-type:none;}
a,img{border:0;}
body{_background-image:url(about:blank);/*用浏览器空白页面作为背景*/_background-attachment:fixed; /* prevent screen flash in IE6 确保滚动条滚动时，元素不闪动*/ } 
body{font-size:12px;font-family: "arial","微软雅黑";background:#f0f1f1;width:1080px;}
.clear{clear:both;display:block;height:0;overflow:hidden;}

/* timebase */
#timebase{width:1080px;position:relative;margin:0 auto ;}
#content{width:1080px;overflow:hidden;background:url(../images/timebase/vertical.png) repeat-y 105px 2px;padding-top:10px;}


.list{overflow:hidden;position:relative;}
.list li{vertical-align:bottom;overflow:hidden;position:relative;}
.liwrap{height:auto;margin-top:28px;}
.lileft{position:absolute;top:0;left:0px;line-height:30px;text-align:center;}
.liright{position:relative;top:-20px;left:150px;height:auto;width:976px;}
.histt{height:35px;line-height:35px;}
.hisct{font-size:14px;color:#6e6e6e;}
.md{font-size:12px;color:#000;}
.icon{display:block;height:56px;width:56px}
.point{width:55px;height:55px;position:absolute;top:0;left:80px;background:url(../images/timebase/point.png) no-repeat 0px 18px;overflow:hidden;}

.point b{
	height:20px;width:20px;background: url(../images/timebase/pointnormal.jpg) no-repeat;
	
	position:absolute;
	top:17px;left:19px;
}

.thiscur .point b{height:30px;width:30px;background: url(../images/timebase/pointocu.jpg) no-repeat;top:12px;left:14px}





/*普通标题默认状态*/
.widget-title-normal{background:url(../images/timebase/widget.png) no-repeat;background-position:100% -50px;padding-right:10px;height:31px;display:block;margin:0px;overflow:hidden; }
.widget-title-normal  .child{background:url(../images/timebase/widget.png) no-repeat;background-position:0 0;height:31px;padding-left:10px;display:block}

/*内容区*/
.widget-content-body{border-left:10px solid #f0f1f1;display:block; background:url(../images/timebase/con_bg.jpg) repeat-x center bottom #fff;}
.widget-news-content{padding:10px;}

/*标题文字*/
.widget-title-text{display:block;float:left;font-size:12px;;font-weight:bold;line-height:31px; padding-left:20px;}
.widget-title-normal span { color:#fff;}

